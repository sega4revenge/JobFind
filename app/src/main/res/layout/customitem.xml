<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linit"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/linone"
            android:orientation="horizontal">

             <!--<ImageView-->
                 <!--android:id="@+id/thumbnail"-->
                 <!--android:layout_width="70dp"-->
                 <!--android:layout_height="70dp"-->
                 <!--android:layout_alignParentLeft="true"-->
                 <!--android:layout_marginRight="16dp"-->
                 <!--android:scaleType="centerCrop" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:id="@+id/tencongviec"
                    android:typeface="normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Large Text dsfsdLarge Text dsfsdLarge Text dsfsdLarge  Text dsfsd  Large Text dsfsd Large Text dsfsd"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="left"
                    android:layout_weight="80"
                    />

                <LinearLayout
                    android:id="@+id/viewCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_view_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/views"
                    android:gravity="right"
                    android:textSize="13dp"
                    android:text="4534535"
                    />
                    </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:weightSum="100"

                    >



                    <TextView
                        android:id="@+id/tenct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="MediumMediumMediumMediumMediumMediumMediumMedium Text Medium "
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_weight="80"
                        android:textAllCaps="false"
                        />

                    <TextView
                        android:id="@+id/trangthai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c43737"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="20"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:weightSum="100"
                    >

                    <TextView
                        android:id="@+id/diachi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView4"
                        android:text="Địa điểm "
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:layout_weight="50"/>
                    <TextView
                        android:id="@+id/luong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="lương Large Text dsfsd Large Text dsfsd"
                        android:textSize="13sp"
                        android:textColor="@color/text"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/dateup1"
                        android:layout_weight="25"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/dateup1"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:textColor="@color/text"
                        android:layout_weight="25"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_below="@id/linone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#949494"/>
    </RelativeLayout>
</LinearLayout>
